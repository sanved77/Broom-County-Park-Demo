<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:layout_width="match_parent"
    android:id="@+id/cl1"
    android:layout_height="250dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/ivParkCover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="false"
        android:src="@drawable/cent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_gravity="bottom"
        android:background="@drawable/fade"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical|bottom"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:textColor="@color/white"
            android:text="Central Park"/>

        <TextView
            android:id="@+id/tvParkDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingLeft="15dp"
            android:textColor="@color/white"
            android:paddingRight="15dp"
            android:text="The best things to do in Central Park aren’t just for tourists! There are attractions for everyone in NYC’s iconic park."
            />

    </LinearLayout>

    <ImageButton
        android:id="@+id/ibNoti"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right|top"
        android:layout_margin="10dp"
        android:elevation="5dp"
        android:background="@drawable/fade_white"
        android:src="@drawable/baseline_notifications_black_24"/>

</android.support.design.widget.CoordinatorLayout>